\name{Arima012}
\alias{Arima012}
\title{Option for forecasting weekly totals (long term or short term). Finds the
 arima forecast with order (0, 1, 3) for the order}
\usage{
Arima012(
  history,
  fcst.dates,
  period = 52,
  pred.level = 0.8,
  transform = "Box_Cox",
  box.cox.lambda = 1
)
}
\arguments{
\item{history:}{dataframe containing fields for date, actual, actual.lower,
actual.upper for forecasting}

\item{fcst.dates:}{named vector containing start and end date of forecast}

\item{period:}{length of seasonal period (in weeks)}

\item{pred.level:}{level for the prediction intervals}
}
\value{
: dataframe containing the date, forecast, forecast lower prediction
  limit and upper prediction limit
}
\description{
Option for forecasting weekly totals (long term or short term). Finds the
 arima forecast with order (0, 1, 3) for the order
}
